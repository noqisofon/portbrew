#!/usr/bin/env ruby

require 'rubyports'
require 'rubyports/port_runner'
require 'rubyports/exceptions'


required_version = Port::Requirement.new ">= 1.8.7"

unless required_version.satisfied_by? Port::ruby_version then
  abort "Expected Ruby version #{required_version} is #{Port::ruby_version}"
end

args = ARGV.clone

begin
  Port::PortRunner.new.run args
rescue Port::SystemError => err
  exit err.exit_code
end
